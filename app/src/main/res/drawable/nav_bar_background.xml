<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/screen_gradient_background"/>
    <item
        android:height="90dp"
        android:right="10dp"
        android:top="55dp">
        <shape>
            <gradient
                android:angle="-90"
                android:startColor="@color/cardview_shadow_start_color"
                android:endColor="@color/cardview_shadow_end_color"
                />
            <corners
                android:topRightRadius="10dp"
                android:bottomRightRadius="10dp"/>
        </shape>
    </item>
    <item android:height="90dp"
          android:right="10dp"
          android:top="50dp">
        <shape>
            <solid
                android:color="@color/cardview_light_background"/>
            <corners
                android:topRightRadius="10dp"
                android:bottomRightRadius="10dp"/>
        </shape>
    </item>
    <item
        android:drawable="@drawable/art_stay_home"
        android:gravity="left|bottom"
        android:bottom="130dp"
        android:left="-40dp"
        android:width="150dp"
        android:height="150dp"/>
</layer-list>