<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <layer-list>
            <item
                android:top="4dp"
                android:right="17dp"
                android:bottom="0dp">
                <shape>
                    <gradient
                        android:angle="-90"
                        android:startColor="@color/cardview_shadow_start_color"
                        android:endColor="@color/cardview_shadow_end_color"/>
                    <corners
                        android:bottomRightRadius="10dp"
                        android:topRightRadius="10dp"/>
                </shape>
            </item>
            <item
                android:top="4dp"
                android:right="17dp"
                android:bottom="4dp">
                <shape>
                    <solid android:color="@color/teal_700"/>
                    <corners
                        android:bottomRightRadius="10dp"
                        android:topRightRadius="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <item
                android:top="4dp"
                android:bottom="0dp">
                <shape>
                    <gradient
                        android:angle="-90"
                        android:startColor="@color/cardview_shadow_start_color"
                        android:endColor="@color/cardview_shadow_end_color"/>

                </shape>
            </item>
            <item
                android:top="4dp"
                android:bottom="4dp">
                <shape>
                    <solid android:color="#AD00BCD4"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
