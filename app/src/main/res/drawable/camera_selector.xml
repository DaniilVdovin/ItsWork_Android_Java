<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:width="100dp" android:height="100dp">
        <shape>
            <corners android:radius="90dp"/>
            <gradient android:type="radial"
                android:endColor="#00F8C93E"
                android:centerColor="#00F8C93E"
                android:startColor="#59000000"
                android:centerX="50%"
                android:centerY="50%"
                android:gradientRadius="50dp"
                android:useLevel="false"
                android:angle="1"/>
        </shape>
    </item>
    <item android:width="40dp" android:height="40dp" android:gravity="center" android:drawable="@drawable/ic_camera"/>
</layer-list>